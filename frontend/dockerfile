# 1. Base image - Node.js
FROM node:20

# 2. Set working directory
WORKDIR /app

# 3. Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# 4. Copy source code
COPY . .

# 5. Build the app for production
RUN npm run build

# 6. Expose port
EXPOSE 3000

# 7. Run the app
CMD ["npm", "start"]
